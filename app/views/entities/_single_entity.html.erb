<table>
  <tr>
    <td>ID</td>
    <td><%= @entity.id %></td>
  </tr>
  <tr>
    <td>NAME</td>
    <td><%= @entity.name %></td>
  </tr>
  <tr>
    <td>URL</td>
    <td><%= link_to @entity.url, @entity.url %></td>
  </tr>
  <tr>
    <td>TYPE</td>
    <td><%= @entity.entity_type %></td>
  <tr>
    <td>SOURCES</td>
    <td><%= @entity.source_list %></td>
  </tr>
  <tr>
    <td>GENRES</td>
    <td><%= @entity.tag_list %></td>
  </tr>
  <tr>
    <td>SIMILAR ENTITIES</td>
    <td>
      <% for related_entity in @entity.matching_entities(:omit_self => true) %>
        <%= link_to related_entity.name, related_entity %></br>
      <% end %>
    </td>
  </tr>
  <tr>
    <td>SIMILAR GENRES</td>
    <td>
      <% for related_entity in @entity.matching_entities(:omit_self => true) %>
        <%= related_entity.tag_list %><br />
      <% end %>
    </td>
  </tr>
  <tr>
    <td>EVENTS</td>
    <td>
      <% for event in @entity.events %>
        <%= link_to event.name, url_for(event) %></br>
      <% end %>
    </td>
  </tr>
  <tr>
    <td>RELATED EVENTS</td>
    <td>
      <% for related_entity in @entity.matching_entities(:omit_self => true).includes(:events) %>
        <% for related_event in related_entity.events %>
          <%= link_to related_event.name, url_for(related_event) %></br>
        <% end %>
      <% end %>
    </td>
  </tr>
</table>